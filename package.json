{
  "name": "blobify-format",
  "displayName": "Blobify Format",
  "description": "Language support and formatter for .blobify configuration files",
  "version": "0.0.1",
  "publisher": "your-publisher-name",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/blobify-format.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/blobify-format/issues"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters"
  ],
  "keywords": [
    "blobify",
    "configuration",
    "syntax highlighting",
    "formatter"
  ],
  "activationEvents": [
    "onLanguage:blobify"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "blobify",
        "aliases": [
          "Blobify",
          "blobify"
        ],
        "extensions": [
          ".blobify"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/blobify-light.svg",
          "dark": "./icons/blobify-dark.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "blobify",
        "scopeName": "source.blobify",
        "path": "./syntaxes/blobify.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "blobify",
        "path": "./snippets/blobify.json"
      }
    ],
    "commands": [
      {
        "command": "blobify.format",
        "title": "Format Blobify File",
        "category": "Blobify"
      },
      {
        "command": "blobify.validate",
        "title": "Validate Blobify File",
        "category": "Blobify"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceLangId == blobify",
          "command": "blobify.format",
          "group": "1_modification"
        }
      ]
    },
    "keybindings": [
      {
        "command": "blobify.format",
        "key": "shift+alt+f",
        "when": "resourceLangId == blobify"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Blobify",
      "properties": {
        "blobify.formatter.indentSize": {
          "type": "number",
          "default": 2,
          "description": "Number of spaces for indentation"
        },
        "blobify.formatter.alignComments": {
          "type": "boolean",
          "default": true,
          "description": "Align comments in context sections"
        },
        "blobify.validation.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable validation of .blobify files"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}